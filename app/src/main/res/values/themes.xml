<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DicodingSubmission" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_pink</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/text_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_pink</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/text_secondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    
    <style name="matchWrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="matchWrap.TextView_table">
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="matchWrap.TableRow">
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="ActionButton" parent="@android:style/Widget.ActionButton">
        <item name="android:drawablePadding">@dimen/action_button_padding</item>
    </style>

    <dimen name="action_button_padding">4dp</dimen>

    <style name="Theme.MyTheme"
        parent="Theme.AppCompat.Light.NoActionBar">
        <!-- other styles -->
        <item name="android:actionButtonStyle">@style/ActionButton</item>
    </style>


</resources>